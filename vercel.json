{
  "framework": "nextjs",
  "buildCommand": "yarn build",
  "outputDirectory": ".next",
  "installCommand": "yarn install --frozen-lockfile",
  "env": {
    "FLOWCORE_API_KEY": "@flowcore-api-key",
    "DATABASE_URL": "@database-url",
    "OVOTIME_API_KEY": "@ovotime-api-key",
    "FLOWCORE_TENANT": "@flowcore-tenant",
    "FLOWCORE_API_URL": "@flowcore-api-url"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "github": {
    "enabled": true,
    "autoAlias": false,
    "silent": true
  }
} 