# Database Configuration
# PostgreSQL connection string for the application database
# For local development with docker-compose
DATABASE_URL=postgresql://ovotime:ovotime_dev@localhost:5432/ovotime

# Flowcore Configuration
# Your Flowcore tenant identifier
FLOWCORE_TENANT=ovotime

# API key for Flowcore authentication (required for event sourcing)
FLOWCORE_API_KEY=your-flowcore-api-key-here

# Flowcore API base URL (usually webhook.api.flowcore.io)
FLOWCORE_API_URL=https://webhook.api.flowcore.io

# Application Configuration
# API key for internal transformer authentication
OVOTIME_API_KEY=your-internal-api-key-here

# Node environment (development, production, test)
NODE_ENV=development 